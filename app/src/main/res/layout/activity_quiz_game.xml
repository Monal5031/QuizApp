<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz_game"
    android:backgroundTint="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.quizapp.QuizGame">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/image"
        android:id="@+id/imageView6"
        android:background="@mipmap/image"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:text="TextView"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff"

        android:layout_width="0dp"
        android:id="@+id/textView4"
        app:layout_constraintRight_toRightOf="@+id/imageView6"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <RadioGroup
        android:layout_width="0dp"

        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        app:layout_constraintRight_toRightOf="@+id/imageView6"
        android:buttonTint="#ffffff"
        android:layout_height="300dp"


        android:backgroundTint="@android:color/background_light"
        android:id="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="70dp">

        <RadioButton
            android:buttonTint="#ffffff"
            android:layout_marginTop="25dp"
            android:backgroundTint="#ffffff"
            android:textColor="#ffffff"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option1"
            android:id="@+id/Option1" />
        <RadioButton
            android:textColor="#ffffff"
            android:backgroundTint="#ffffff"
            android:buttonTint="#ffffff"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option2"
            android:id="@+id/Option2" />
        <RadioButton
            android:backgroundTint="#ffffff"
            android:layout_marginTop="25dp"
            android:buttonTint="#ffffff"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option3"
            android:id="@+id/Option3" />
        <RadioButton
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"
            android:backgroundTint="#ffffff"
            android:layout_height="wrap_content"
            android:text="Option4"
            android:id="@+id/Option4" />

    </RadioGroup>

    <Button
        android:text="Next"
        android:layout_width="0dp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6" />

    <TextView
        android:text="Time Left: 60s"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        android:layout_marginTop="8dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="441dp"
        tools:layout_editor_absoluteX="155dp"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_light" />


</android.support.constraint.ConstraintLayout>
