<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.quizapp.LevelPage">

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@mipmap/image"
        android:id="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@mipmap/image"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:text="Select Topic:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="16dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif" />

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="@mipmap/bulb"
        android:id="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        android:layout_width="50dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:text="General Knowledge"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:id="@+id/GeneralKnowledge"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="155dp"
        android:layout_width="200dp" />

    <TextView
        android:text="Select topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light" />
</android.support.constraint.ConstraintLayout>
